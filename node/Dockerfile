ARG NODE_VERSION
FROM node:${NODE_VERSION}

ARG UID
ENV UID ${UID}
ARG GID
ENV GID ${GID}

RUN usermod -u ${UID} node && groupmod -g ${GID} node

ARG NPM_VERSION
ENV NPM_VERSION ${NPM_VERSION}
ARG BOWER_VERSION
ENV BOWER_VERSION ${BOWER_VERSION}
RUN npm i -g npm@${NPM_VERSION} && npm i -g bower@${BOWER_VERSION}
